{
  "name": "orders-manager",
  "homepage": "https://orders-manager.netlify.com/",
  "description": "app for managing orders in online store",
  "repository": {
    "type": "git",
    "url": "https://github.com/DimaDK24/orders-manager.git"
  },
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start:frontend": "cd packages/frontend && yarn start",
    "start:backend": "cd packages/backend && yarn start",
    "build:frontend": "cd packages/frontend && yarn build",
    "test:frontend": "cd packages/frontend && yarn test",
    "test:backend": "cd packages/backend && yarn test",
    "test": "yarn test:backend && yarn test:frontend",
    "eject-create-react-app": "cd packages/frontend && yarn eject",
    "format": "prettier --write \"./**/*.{js,jsx,json,css,yml}\"",
    "lint:js": "eslint \"./**/*.{js,jsx}\" \"./packages/frontend/.storybook/**/*.js\" --max-warnings=0",
    "lint:styles": "cd packages/frontend && yarn lint:styles",
    "lint:code": "yarn lint:js && yarn lint:styles",
    "lint:commits": "commitlint --from origin/master --to HEAD",
    "lint": "yarn lint:code && yarn lint:commits",
    "start:storybook": "cd packages/frontend && yarn start-storybook",
    "build:storybook": "cd packages/frontend && yarn build-storybook",
    "deploy:backend": "cd packages/backend && yarn deploy"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@storybook/addon-actions": "^5.2.1",
    "@storybook/addon-links": "^5.2.1",
    "@storybook/addon-notes": "^5.2.1",
    "@storybook/addons": "^5.2.1",
    "@storybook/react": "^5.2.1",
    "eslint-config-airbnb": "^17.1.1",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^22.14.0",
    "eslint-plugin-jest-formatting": "^1.0.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.0",
    "prettier": "1.18.2"
  },
  "keywords": [
    "react"
  ],
  "license": "MIT"
}
